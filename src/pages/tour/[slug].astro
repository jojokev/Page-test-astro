  <script>
    
    // Tabs del contenido

    const tabsRoots = document.querySelectorAll("[data-tabs-root]");
    const activeClasses = ["border-[var(--color-primary)]", "bg-[var(--color-primary)]", "text-white"];
    const inactiveClasses = ["border-[#ccc]", "bg-white", "text-black"];

    tabsRoots.forEach((root) => {
      const buttons = root.querySelectorAll("[data-tab-button]");
      const panels = root.querySelectorAll("[data-tab-panel]");

      buttons.forEach((button) => {
        button.addEventListener("click", () => {
          const targetId = button.getAttribute("data-tab-target");

          buttons.forEach((btn) => {
            btn.setAttribute("aria-selected", "false");
            btn.classList.remove(...activeClasses);
            btn.classList.add(...inactiveClasses);
          });

          panels.forEach((panel) => {
            panel.classList.add("hidden");
          });

          button.setAttribute("aria-selected", "true");
          button.classList.remove(...inactiveClasses);
          button.classList.add(...activeClasses);

          const targetPanel = root.querySelector(`#${targetId}`);
          targetPanel?.classList.remove("hidden");
        });
      });
    });

    // Modal de Booking

    const bookingDialog = document.getElementById("booking-dialog");
    const openBookingDialog = document.getElementById("open-booking-dialog");
    const closeBookingDialog = document.getElementById("close-booking-dialog");
    const cancelBookingDialog = document.getElementById("cancel-booking-dialog");

    openBookingDialog?.addEventListener("click", (event) => {
      event.preventDefault();
      bookingDialog?.showModal();
      document.body.style.overflow = "hidden";
    });

    closeBookingDialog?.addEventListener("click", () => {
      bookingDialog?.close();
    });

    cancelBookingDialog?.addEventListener("click", () => {
      bookingDialog?.close();
    });

    bookingDialog?.addEventListener("close", () => {
      document.body.style.overflow = "";
    });

    bookingDialog?.addEventListener("click", (event) => {
      const rect = bookingDialog.getBoundingClientRect();
      const isInDialog =
        rect.top <= event.clientY &&
        event.clientY <= rect.top + rect.height &&
        rect.left <= event.clientX &&
        event.clientX <= rect.left + rect.width;

      if (!isInDialog) {
        bookingDialog.close();
      }
    });
  </script>
