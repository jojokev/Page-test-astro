---
import type { GetStaticPaths } from "astro";
import Layout from "../../layouts/layout.astro";
import GalleryTour from "../../components/GalleryTour.astro";
import defaultImage from "../../assets/default.webp";

interface tourSlug{
  slug: String
}

export const getStaticPaths = (async () => {
  const res = await fetch("https://69explorer.com/wp-json/wp/v2/tour?per_page=10&_fields=slug")
  const data = await res.json()
  return data.map((tour:tourSlug)=>(
    {params: {slug: tour.slug}}
  ))
}) satisfies GetStaticPaths;

const {slug} = Astro.params

const res = await fetch(`https://69explorer.com/wp-json/wp/v2/tour?slug=${slug}&_fields=id,title,content`)
const [data] = await res.json()

